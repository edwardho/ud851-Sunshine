<!-- COMPLETE (1) Change the FrameLayout to a vertical LinearLayout -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- COMPLETE (2) Remove the tv_display_weather TextView -->
    <!-- COMPLETE (3) Add a TextView for the selected day's date -->
    <!-- Presents the weather's date -->
    <TextView
        android:id="@+id/tv_display_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        tools:text="Date: Saturday, October 1"/>

    <!-- COMPLETE (4) Add a TextView for the selected day's weather description -->
    <!-- Presents the weather's description -->
    <TextView
        android:id="@+id/tv_display_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        tools:text="Description: Foggy"/>

    <!-- COMPLETE (5) Add a TextView for the selected day's high temperature -->
    <!-- Presents the weather's high temperature -->
    <TextView
        android:id="@+id/tv_display_temp_high"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        tools:text="Temp High: 96"/>

    <!-- COMPLETE (6) Add a TextView for the selected day's low temperature -->
    <!-- Presents the weather's high temperature -->
    <TextView
        android:id="@+id/tv_display_temp_low"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        tools:text="Temp Low: 78"/>

    <!-- COMPLETE (7) Add a TextView for the selected day's humidity -->
    <!-- Presents the weather's humidity -->
    <TextView
        android:id="@+id/tv_display_humidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        tools:text="Humidity: 72%"/>

    <!-- COMPLETE (8) Add a TextView for the selected day's pressure -->
    <!-- Presents the weather's pressure -->
    <TextView
        android:id="@+id/tv_display_pressure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        tools:text="Pressure: 762 pba"/>

    <!-- COMPLETE (9) Add a TextView for the selected day's wind -->
    <!-- Presents the weather's wind speed -->
    <TextView
        android:id="@+id/tv_display_wind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        tools:text="Wind Speed: 5mph"/>

</LinearLayout>

